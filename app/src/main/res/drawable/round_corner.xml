<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" android:radius="30dip" >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#2C3E50" />
            <gradient android:angle="-90" android:startColor="#2C3E50" android:endColor="#2C3E50"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" android:radius="30dip" >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#2C3E50" />
            <solid android:color="#2C3E50"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  android:radius="30dip">
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#2574A9" />
            <gradient android:angle="-90" android:startColor="#2574A9" android:endColor="#2574A9" />
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" android:radius="30dip" >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#2C3E50" />
            <gradient android:angle="-90" android:startColor="#193543" android:endColor="#193543"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" android:radius="30dip" >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#193543" />
            <solid android:color="#193543"/>
        </shape>
    </item>
    <item >
        <shape android:shape="ring"  android:radius="100dip">
            <corners android:radius="20dip" />
            <stroke android:width="1dp" android:color="#fff" />
            <gradient android:angle="-90" android:startColor="#fff" android:endColor="#fff" />
        </shape>
    </item>
</selector>
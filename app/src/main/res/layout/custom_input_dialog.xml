<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="25sp"
    android:layout_weight="10"
    android:elevation="20dp"
    android:background="@drawable/round_corner_updated">

<LinearLayout
    android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginTop="30sp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:src="@drawable/license_icon"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter CNIC without dashes/License No"
            android:layout_marginLeft="10sp"
            android:inputType="number"
            android:id="@+id/et_verify_license"
            android:backgroundTint="#fff"
            android:maxLength="13"
            android:layout_gravity="center"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"/>
    </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#ffffff"
            android:id="@+id/btn_search_license_record"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:background="@color/button_color"
            android:text="Search"
            android:gravity="center"
            android:textSize="25sp"/>


</LinearLayout>